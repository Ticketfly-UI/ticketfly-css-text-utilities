{
  "name": "ticketfly-css-text-utilities",
  "version": "0.0.0",
  "description": "Utilities for controlling the structure and alignment of text content",
  "main": "index.css",
  "style": "index.css",
  "keywords": [
    "ticketfly-css",
    "ticketfly-css text",
    "ticketfly-css text utilities",
    "ticketfly-css utilities",
    "css text",
    "css"
  ],
  "repository": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css-text-utilities.git",
    "type": "git"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "index.css"
  ],
  "bugs": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css-text-utilities/issues"
  },
  "homepage": "https://github.com/Ticketfly-UI/ticketfly-css-text-utilities",
  "author": "Brian Sipple <@Brian_Sipple>",
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^3.9.1",
    "del-cli": "^0.2.1",
    "http-server": "^0.9.0",
    "npmpub": "^3.1.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0"
  },
  "scripts": {
    "clean": "del build/**",
    "setup": "mkdir -p build",
    "transform": "postcss --config postcss.config.js",
    "minify": "postcss -u cssnano build/ticketfly-css-text-utilities.css -o build/ticketfly-css-text-utilities.min.css",
    "build": "npm run transform",
    "build:test": "npm run clean && postcss -u postcss-import -u postcss-cssnext test/index-test.css -o build/test.css",
    "build:min": "npm run build && npm run minify",
    "prepublish": "npm run clean && npm run setup && npm run build",
    "serve:test": "npm run build:test && http-server -p 4802 -o",
    "test": "npm run build:test",
    "release": "npmpub"
  }
}
